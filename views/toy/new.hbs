<form action="/toy/add" method="post" class="card p-3 bg-light text-center">
   <h2 class="text text-primary">Add new toy</h2>
   <div class="form-group">
      <label class="text-success h6">Toy Name</label>
      <input class="form-control" type="text" name="name" required minlength="3" maxlength="20">
   </div>

   <div class="form-group mt-3">
      <label class="text-success h6">Toy Price</label>
      <input class="form-control" type="number" name="price" required min=0 max=10000>
   </div>

   <div class="form-group mt-3">
      <label class="text-success h6">Toy Image</label>
      <input class="form-control" type="text" name="image" required>
   </div>
   
  
   <div class="form-group mt-3">
      <label class="text-success h6">Toy Year</label>
      <input class="form-control" type="number" name="year" required min=1000 max=2023>
   </div>
   <div class="form-group">
      <label class="text-success h6">Toy Description</label>
      <input class="form-control" type="text" name="description" required minlength="3" maxlength="60">
   </div>
   <div class="form-group">
      <label class="text-success h6">Toy Long Description</label>
      <input class="form-control" type="text" name="longdescription" required minlength="3" maxlength="80">
   </div>
   
   <div class="form-group mt-3">
      <input class="btn btn-primary mt-3" type="submit" value="Add">
   </div>
</form>