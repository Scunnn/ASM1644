<form action="/toy/edit/{{toy._id}}" method="post" class="card p-3 bg-light text-center">
   <h2 class="text text-primary">Edit Toy</h2>
   <div class="form-group">
      <label class="text-success h6">Toy Name</label>
      <input class="form-control" type="text" name="name" value="{{toy.name}}" required minlength="3"
         maxlength="20">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Toy Price</label>
      <input class="form-control" type="number" name="price" value="{{toy.price}}" required minlength="3"
         maxlength="10000">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Toy Year</label>
      <input class="form-control" type="number" name="year" value="{{toy.year}}" required minlength="1000"
         maxlength="2023">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Toy Image</label><br>
      <img src="{{toy.image}}" width="100" height="100"><br>
      <input class="form-control" type="text" name="image" value="{{toy.image}}" required>
   </div>
   
   <div class="form-group">
      <label class="text-success h6">Toy Description</label>
      <input class="form-control" type="text" name="description" value="{{toy.description}}" required minlength="3"
         maxlength="20">
   </div>

   <div class="form-group mt-3">
      <input class="btn btn-primary mt-3" type="submit" value="Edit">
   </div>
</form>