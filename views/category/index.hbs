<table class="table table-bordered bg-light p-4 mt-3 mb-3 text-center">
   <tr>
      <th class="text-primary" colspan="2">Category List</th>
      <th>
         <a class="btn btn-primary" href="/category/add">ADD</a>
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Menu</th>
   </tr>

   {{#each category }}
   <tr>
      <td>{{name}}</td>
      <td><img src="{{image}}" width="100" height="100"></td>
      <td>
         <a class="btn btn-warning" href="category/edit/{{_id}}">EDIT</a>
         <a class="btn btn-danger" href="category/delete/{{_id}}">DELETE</a>
      </td>
   </tr>
   {{/each}}
</table>