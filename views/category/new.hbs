<form action="/category/add" method="post" class="card p-3 bg-light text-center">
   <h2 class="text text-primary">Add new Category</h2>
   <div class="form-group">
      <label class="text-success h6">Category Name</label>
      <input class="form-control" type="text" name="name" required minlength="3" maxlength="20">
   </div>

   <div class="form-group mt-3">
      <label class="text-success h6">Category Image</label>
      <input class="form-control" type="text" name="image" required>
   </div>
   
   <div class="form-group mt-3">
      <input class="btn btn-primary mt-3" type="submit" value="Add">
   </div>
</form>